" Enable filetype detection, plugin loading, and indent formatting.
filetype plugin indent on
" Enable syntax highlighting.
syntax on
" Specify system clipboard for copy+paste.
set clipboard=unnamed
" Set right-side boarder line.
set cc=80
" Enable backspace.
set backspace=indent,eol,start
" Show white spaces.
set list
" Set specific white space characters.
set listchars=trail:Â·,tab:>-
" Disable swap files.
set noswapfile
" Enable row and column display of cursor.
set ruler
" Set tab to four spaces.
set tabstop=4
" Indent corresponds to single tab.
set shiftwidth=4
" On pressing tab, insert spaces.
set expandtab

" Go syntax highlighting
let g:go_highlight_functions = 1
let g:go_highlight_methods = 1
let g:go_highlight_fields = 1
let g:go_highlight_types = 1
let g:go_highlight_operators = 1
let g:go_highlight_build_constraints = 1

" Auto-start NERDTree
autocmd vimenter * NERDTree
" Keyboard shortcut for NERDTree.
map <C-n> :NERDTreeToggle<CR>

" Specify a directory for plugins
" - For Neovim: ~/.local/share/nvim/plugged
" - Avoid using standard Vim directory names like 'plugin'
call plug#begin('~/.vim/plugged')
" Using a tagged release; wildcard allowed (requires git 1.9.2 or above)
Plug 'fatih/vim-go', { 'do': ':GoUpdateBinaries' }
Plug 'scrooloose/nerdtree', { 'on':  'NERDTreeToggle' }
" Initialize plugin system
call plug#end()
